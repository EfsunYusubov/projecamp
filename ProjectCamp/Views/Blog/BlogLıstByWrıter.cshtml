@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogLıstByWrıter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazıçının blogları</h1>
<table class="table table-hover">

    <tr>
        <th>#</th>
        <th>Blog başlığı</th>
        <th>Yaratma tarixi</th>
        <th>Kateqoriya</th>
        <th>Vəziyyəti</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzəlt</a></td>
        </tr>
    }
</table>
<br />
<a href="/Blog/BlogAdd/" class=" btn btn-info">Yeni blog yarat</a>

