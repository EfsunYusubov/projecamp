@model UserSignUpViewModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/Admin Panel/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Admin Panel/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Admin Panel/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/Admin Panel/css/animate.css" rel="stylesheet">
    <link href="~/Admin Panel/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h3 class="logo-name">IN+</h3>

            </div>
            <h3>Qeyd ekrani</h3>
            <p>Yeni hesab yaradin</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.nameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.nameSurname" placeholder="Ad Soyad" >
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for=@Model.Mail >
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="İstifadeci adi" asp-for=@Model.UserName >
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifrə" asp-for=@Model.Password required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Tekrar şifrə" asp-for=@Model.ConfirmPassword required="">
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> İstifadə şərtlərini oxudum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Hesab aç</button>

                <p class="text-muted text-center"><small>Hesabınız yoxdur ?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login">Hesaba gir</a>

                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>
            </form>
            <p class="m-t"> <small>Akulalar oyaqdılar ay qaqa &copy;@DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Admin Panel/js/jquery-3.1.1.min.js"></script>
    <script src="~/Admin Panel/js/popper.min.js"></script>
    <script src="~/Admin Panel/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/Admin Panel/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>



