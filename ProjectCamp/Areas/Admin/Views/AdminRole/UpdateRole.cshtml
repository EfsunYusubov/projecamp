@using ProjectCamp.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Rol Update sehifesi</h1>
<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" name="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role başlığı</label>
        <input type="text" name="name" class="form-control" />
    </div>

    <button class="btn btn-success">Rolu guncelle</button>
</form>

