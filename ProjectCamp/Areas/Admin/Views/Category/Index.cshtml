
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kateqoriya listi</h1>
<br />
<table class="table table-bordered">
<tr>
    <th>#</th>
    <th>Kateqoriya adı</th>
    <th>Deaktiv et</th>
    <th>Aktiv et</th>
    <th>Düzəlt</th>
</tr>
@foreach(var item in Model)
{
    <tr>
        <td>@item.CategoryID</td>
        <td>@item.CategoryName</td>
        <td><a href="/Admin/Category/CategoryDelete/@item.CategoryID/" id="DeleteBtn" 
            onclick= "return confirm('Silmek istediyinize eminsiniz ?');"  class="btn btn-info">Deaktiv et</a></td>
        <td><a href="#" class="btn btn-warning">Aktiv et</a></td>
        <td><a href="#" class="btn btn-success">Düzəlt</a></td>
    </tr>
}
</table> 
<a href="/Admin/Category/AddCategory/" class="btn btn-primary">Yeni kateqoriya</a>
<br /><br />

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new {page}))
